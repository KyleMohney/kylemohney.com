(function(){
  const track = document.querySelector('#cert-scroll-track');
  let start = null;
  let px = 0;
  function step(ts) {
    if (!start) start = ts;
    const elapsed = ts - start;
    px = (elapsed/30) % (track.scrollWidth/2);
    track.style.transform = `translateX(${-px}px)`;
    requestAnimationFrame(step);
  }
  requestAnimationFrame(step);
})();
</script>
