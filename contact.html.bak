<script>
        document.addEventListener('DOMContentLoaded', () => {
            const carousel = document.querySelector('.testimonial-carousel .carousel-container');
            const slides = document.querySelectorAll('.testimonial-carousel .testimonial-slide');
            const dots = document.querySelectorAll('.testimonial-carousel .carousel-dot');
            const prevButton = document.querySelector('.testimonial-carousel .prev-button');
            const nextButton = document.querySelector('.testimonial-carousel .next-button');
            let currentSlide = 0;

            function updateCarousel() {
                slides.forEach((slide, index) => {
                    slide.classList.remove('active');
                    dots[index].classList.remove('active');
                });
                slides[currentSlide].classList.add('active');
                dots[currentSlide].classList.add('active');
                carousel.style.transform = `translateX(-${currentSlide * 100}%)`;
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length;
                updateCarousel();
            }

            function prevSlide() {
                currentSlide = (currentSlide - 1 + slides.length) % slides.length;
                updateCarousel();
            }

            nextButton.addEventListener('click', nextSlide);
            prevButton.addEventListener('click', prevSlide);

            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
