          background: linear-gradient(135deg, #7933ff, #006b40);
          color: white;
          padding: 80px 20px;
        }
        .contact-hero-container {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 40px;
          max-width: 1200px;
          margin: 0 auto;
          align-items: center;
        }
        .hero-text h1 {
          font-size: 3em;
          font-weight: 800;
          margin-bottom: 20px;
        }
        .hero-text p {
          font-size: 1.2em;
          line-height: 1.6;
          max-width: 500px;
          margin-bottom: 30px;
        }
        .hero-cta {
          display: inline-block;
          background: white;
          color: #006b40;
          font-weight: 700;
          padding: 14px 28px;
          border-radius: 8px;
          text-decoration: none;
          transition: all 0.3s ease;
          animation: pulseGlow 2s infinite;
        }
        .hero-cta:hover {
          background: rgba(255,255,255,0.9);
          transform: translateY(-2px);
        }
        .hero-image img {
          max-width: 100%;
          height: auto;
          border-radius: 12px;
          animation: zoomSlow 12s ease-in-out infinite alternate;
        }
        @media (max-width: 900px) {
          .contact-hero-container {
            grid-template-columns: 1fr;
            text-align: center;
          }
          .hero-text p {
            margin-left: auto;
            margin-right: auto;
          }
        }

        /* ======== TRUSTED BY ======== */
        .trusted-strip {
          background: white;
          padding: 20px 0;
          border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        .trusted-container {
          max-width: 1200px;
          margin: 0 auto;
          display: flex;
          gap: 40px;
          overflow-x: auto;
          padding: 0 20px;
          align-items: center;
        }
        .trusted-container img {
          height: 40px;
          flex-shrink: 0;
          filter: grayscale(1) brightness(1.2) contrast(1.1);
          transition: filter 0.3s ease;
        }
        .trusted-container img:hover {
          filter: none;
        }

        /* ======== CONTACT CARDS ======== */
        .contact-methods {
          max-width: 1200px;
          margin: 60px auto;
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
          gap: 24px;
          padding: 0 20px;
