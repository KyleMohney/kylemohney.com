        /* ======== GLOBAL ANIMATIONS ======== */
        @keyframes zoomSlow {
          0% { transform: scale(1); }
          100% { transform: scale(1.05); }
        }
        @keyframes pulseGlow {
          0%, 100% { box-shadow: 0 0 0 rgba(152,229,142,0); }
          50% { box-shadow: 0 0 20px rgba(152,229,142,0.5); }
